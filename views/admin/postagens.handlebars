<h2>Lista de Postagens: </h2>
<hr>
<a  href="/admin/postagens/add"><button class="btn btn-success">nova postagem </button></a>

{{#each postagens}}
<div class="card mt-4 ">
    <div class="card-body">       
        <h4> {{Titulo}}</h4>
        <p>Descrição: {{Descricao}}</p>
        <small>Data: {{Data}}</small><br>
        <small>Categoria: {{Categoria.Nome}}</small>
        <br>
        <a href="/admin/postagens/edit/{{_id}}"><button class="btn btn-success mt-4">Editar</button></a>
        <form action="/admin/postagens/delete" method="POST">
            <input type="hidden" name="id" value="{{_id}}">
            <button type="submit" class="btn btn-danger mt-2">Deletar</button>
        </form>
    
    </div>
</div>
{{else}}    
<h3 class="mt-3">Nenhuma Postagem Registrada </h3>
{{/each}}
