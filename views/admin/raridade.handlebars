{{#each erros}}
    <div class="alert alert-danger">{{texto}}</div>
{{else}}

{{/each}}
<h2>Lista de Postagens: </h2>
<hr>
<a  href="/admin/raridade/add"><button class="btn btn-outline-success mt-2">Adicionar Nova Raridade </button></a>
<hr>
{{#each raridades}}
    
<div class="card mt-4">
    <div class="card-body">
        <h4>{{Nome}}</h4>
        <small>{{Data}}</small><br>
        <a href="/admin/raridade/edit/{{_id}}"><button class="btn btn-outline-success mt-2">Editar</button></a><br>
        <form action="/admin/raridade/delete" method="POST">
            <input type="hidden" name="id" value="{{_id}}">
            <button type="submit" class="btn btn-outline-danger mt-2">Deletar</button>
        </form>
    </div>
</div>
{{else}}
<h3 class="mt-3">Nenhuma Categoria Registrada </h3>
{{/each}}