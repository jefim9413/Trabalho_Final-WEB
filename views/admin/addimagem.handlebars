<h1>Adicionar Imagem</h1>
<div class="card">
    <div class="card-body">
        <form action="/admin/upload/{{postagens.Titulo}}" method="post" enctype="multipart/form-data">
            <label for="titulo">Titulo: </label>
                <input type="text" name="titulo" id="titulo" value="{{postagens.Titulo}}">
            <label for="slug">Slug: </label>
                <input type="text" name="slug" id="slug" value="{{postagens.Slug}}">
            <label for="desc">Descrição: </label>
                <input type="text" name="descricao" id="desc" value="{{postagens.Descricao}}">
            <label for="arq">Faça o Upload De Uma Imagem: </label>
                <input type="hidden" name="id" value="{{postagens._id}}">
                <input type="hidden" name="conteudo" value="{{postagens.Conteudo}}">
                <input type="hidden" name="Categoria" value="{{postagens.Categoria}}">
                <input type="file" name="arquivo" id="arq" class="form-control">
            <button type="submit" class="mt-3">Enviar</button>
        </form>
    </div>
</div>